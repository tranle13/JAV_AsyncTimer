<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Button.Stop">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="ColorAndSize" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ConstraintLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.48</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">2</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Text.Seconds">
        <item name="android:gravity">start</item>
    </style>
</resources>
